<h3 class="{{widget_classes.title}}">Fetched Data:</h3>
<div class="{{widget_classes.body}}">
    <ul>
        {{#random_quote}}
        <li>
            <strong>Random Quote:</strong>
            <blockquote class="{{widget_classes.citation}}">
                "{{content}}" &mdash; {{author}}
            </blockquote>
        </li>
        {{/random_quote}}
        {{^random_quote}}
        <li><strong>Random Quote:</strong> Not available.</li>
        {{/random_quote}}

        {{#sample_todo}}
        <li><strong>Sample Todo:</strong> {{title}} (Status: {{#completed}}Completed{{/completed}}{{^completed}}Not Completed{{/completed}})</li>
        {{/sample_todo}}
        {{^sample_todo}}
        <li><strong>Sample Todo:</strong> Not available.</li>
        {{/sample_todo}}

        {{#static_info}}
        <li><strong>Static Info Message:</strong> {{message}}</li>
        {{/static_info}}
        {{^static_info}}
        <li><strong>Static Info:</strong> Not available.</li>
        {{/static_info}}
    </ul>
</div>
